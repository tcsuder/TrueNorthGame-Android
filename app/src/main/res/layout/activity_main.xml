<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tylersuderman.truenorthgame.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/background1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TRUE NORTH"
        android:id="@+id/appTitleTextView"
        android:textStyle="bold"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:textColor="@color/colorAccentDark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A TRIVIA GAME!"
        android:id="@+id/appSubtitleTextView"
        android:layout_below="@+id/appTitleTextView"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textColor="@color/colorAccentDark" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="login"
        android:id="@+id/loginButton"
        android:background="@drawable/main_button"
        android:layout_above="@+id/playButton"
        android:layout_alignLeft="@+id/playButton"
        android:layout_alignStart="@+id/playButton"
        android:layout_alignRight="@+id/playButton"
        android:layout_alignEnd="@+id/playButton"
        android:layout_marginBottom="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="quick play"
        android:id="@+id/playButton"
        android:background="@drawable/main_button"
        android:layout_above="@+id/aboutButton"
        android:layout_alignLeft="@+id/appTitleTextView"
        android:layout_alignStart="@+id/appTitleTextView"
        android:layout_alignRight="@+id/appTitleTextView"
        android:layout_alignEnd="@+id/appTitleTextView"
        android:layout_marginBottom="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:id="@+id/aboutButton"
        android:background="@drawable/main_button"
        android:layout_marginBottom="69dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/appTitleTextView"
        android:layout_alignEnd="@+id/appTitleTextView"
        android:layout_alignLeft="@+id/playButton"
        android:layout_alignStart="@+id/playButton"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_below="@+id/appSubtitleTextView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="42dp"
        android:hint="testningtesting" />

</RelativeLayout>
