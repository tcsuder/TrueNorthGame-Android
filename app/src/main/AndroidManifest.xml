<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tylersuderman.truenorthgame">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/NoActionBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GameStartActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tylersuderman.truenorthgame.MainActivity" />
        </activity>
        <activity android:name=".AboutActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tylersuderman.truenorthgame.MainActivity" />
        </activity>
        <activity android:name=".TopScoresActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tylersuderman.truenorthgame.MainActivity" />
        </activity>
        <activity
            android:name="com.spotify.sdk.android.authentication.LoginActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <service
            android:name=".SpotifyService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".GameRoundActivity"></activity>
    </application>

</manifest>